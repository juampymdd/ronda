// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  MOZO
  BARMAN
  COCINERO
}

enum TableStatus {
  LIBRE
  RESERVADA
  OCUPADA
  PIDIENDO
  ESPERANDO
  PAGANDO
}

enum OrderStatus {
  PENDIENTE
  PREPARANDO
  LISTO
  ENTREGADO
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  CANCELLED
  SEATED
  NO_SHOW
}

enum ProductType {
  BARRRA
  COCINA
}

model User {
  id            String        @id @default(cuid())
  name          String?
  email         String?       @unique
  emailVerified DateTime?
  image         String?
  password      String? // For Credentials provider
  role          Role          @default(MOZO)
  orders        Order[] // Keep orders field as it's not explicitly removed from the final User model structure
  reservations  Reservation[]
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Zone {
  id        String   @id @default(cuid())
  name      String   @unique
  color     String   @default("#3b82f6") // Hex color for UI
  capacity  Int      @default(20) // Maximum people capacity for this zone
  width     Float    @default(600) // Width in pixels for floor plan
  height    Float    @default(400) // Height in pixels for floor plan
  tables    Table[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Table {
  id           String        @id @default(cuid())
  number       Int           @unique
  capacity     Int
  status       TableStatus   @default(LIBRE)
  zoneId       String?
  zone         Zone?         @relation(fields: [zoneId], references: [id])
  x            Float // Floor plan coordinates
  y            Float // Floor plan coordinates
  rondas       Ronda[]
  reservations Reservation[]
  tableGroupId String?
  tableGroup   TableGroup?   @relation(fields: [tableGroupId], references: [id])
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model TableGroup {
  id        String   @id @default(cuid())
  name      String? // Optional name like "Mesa 5+6" or "Grupo VIP"
  tables    Table[]
  rondas    Ronda[]
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Ronda {
  id           String      @id @default(cuid())
  tableId      String?
  table        Table?      @relation(fields: [tableId], references: [id])
  tableGroupId String?
  tableGroup   TableGroup? @relation(fields: [tableGroupId], references: [id])
  orders       Order[]
  isActive     Boolean     @default(true)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model Order {
  id        String      @id @default(cuid())
  status    OrderStatus @default(PENDIENTE)
  rondaId   String
  ronda     Ronda       @relation(fields: [rondaId], references: [id])
  mozoId    String
  mozo      User        @relation(fields: [mozoId], references: [id])
  items     OrderItem[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model OrderItem {
  id              String   @id @default(cuid())
  orderId         String
  order           Order    @relation(fields: [orderId], references: [id])
  productId       String
  product         Product  @relation(fields: [productId], references: [id])
  quantity        Int
  notes           String?
  priceAtSnapshot Decimal  @db.Decimal(10, 2)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Product {
  id        String      @id @default(cuid())
  name      String
  category  String
  price     Decimal     @db.Decimal(10, 2)
  type      ProductType @default(BARRRA)
  items     OrderItem[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Reservation {
  id              String            @id @default(cuid())
  tableId         String
  table           Table             @relation(fields: [tableId], references: [id])
  customerName    String
  customerPhone   String?
  partySize       Int // Number of people
  reservationTime DateTime // When the reservation is for
  duration        Int               @default(120) // Duration in minutes (default 2 hours)
  status          ReservationStatus @default(PENDING)
  notes           String?
  createdById     String
  createdBy       User              @relation(fields: [createdById], references: [id])
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@index([tableId])
  @@index([reservationTime])
  @@index([status])
}

model Payment {
  id        String   @id @default(cuid())
  rondaId   String
  amount    Decimal  @db.Decimal(10, 2)
  method    String // EFECTIVO, TARJETA, TRANSFERENCIA
  splitType String // SINGLE, EQUAL, BY_ITEM
  createdAt DateTime @default(now())
}
